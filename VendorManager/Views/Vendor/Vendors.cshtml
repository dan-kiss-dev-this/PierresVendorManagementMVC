<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders</title>
</head>

<body>
    @using VendorManager.Models
    <h2>List of all vendors</h2>
    @if (Model.Count == 0)
    {
        <h3>No Vendors</h3>
    }
    @foreach (Vendor vendor in Model)
    {
        <h3>
            <a href="/vendors/@vendor.Id">@vendor.Name</a>
        </h3>
    }

    <h3>
        <a href="/vendors/new">
            Add an Vendor
        </a>
    </h3>

</body>

</html>