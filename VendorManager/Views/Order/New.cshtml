<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New</title>
</head>

<body>
    @using VendorManager.Models
    <h1>Add a Order to @Model.Name</h1>
    <form action="/vendors/@Model.Id/orders" method="post">
        <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
        <label for="orderName">Order</label>
        <input id="orderName" name="orderName" type="text">
        <label for="orderDescription">Description of Order</label>
        <input id="orderDescription" name="orderDescription" type="text">
        <label for="orderPrice">Price (Whole Number)</label>
        <input id="orderPrice" name="orderPrice" type="number">
        <button type="submit">Add</button>
    </form>

</body>

</html>